<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Users</title>
</head>
<body>
    <%- include("./partials/navbar.ejs", {user: user}) %>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Username</th>
                    <th scope="col">Role</th>
                    <th scope="col">Update</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user) => { %>
                <tr>
                    <th scope="row"><%= user.id %></th>
                    <td><%= user.username %></td>
                    <td><%= user.role %></td>
                    <td> <button class="btn btn-primary" onclick="updateUserRole(<%= user.id %>, '<%= user.role %>')"> Change Role </button></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>