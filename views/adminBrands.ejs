<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Brands</title>
</head>
<body>
    <%- include("./partials/navbar.ejs", {user: user}) %>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>

                </tr>
            </thead>
            <tbody>
                <% brands.forEach((brand) => { %>
                <tr>
                    <th scope="row"><%= brand.id %></th>
                    <td><%= brand.Brand %></td>
                    <td> <button class="btn btn-primary" onclick="updatedBrand('<%= brand.id %>')"> Update </button></td>
                    <td> <button class="btn btn-danger" onclick="deleteBrand('<%= brand.Brand %>')"> Delete </button></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <div class="text-center">
            <button class="btn btn-success" onclick="createBrand()"> Add Brand </button>

        </div>
    </div>
</body>
</html>